extends ../layout

block content
  .page-header
    h3 Setup your custom fields
  form.form-horizontal( action='/api/savecustomfields', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    each customfield in customfields
      .form-group
        label.col-sm-3.control-label(for=customfield.name)= customfield.label
        .col-sm-7
          input.form-control(type='text', name='fdCustomField['+customfield.name+']', id=customfield.name, required='true')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-default(type='submit')
          | Add 
