extends ../layouthome

block content
  .page-header
    h3 Sign in
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='email', value=email)
    .form-group
      label.col-sm-3.control-label(for='password') PIN
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-default(type='submit')
          i.fa.fa-user
          | Login
        a.btn.btn-link(href='/forgot', style='color:white') Forgot your pin?
